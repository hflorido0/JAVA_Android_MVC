<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AhorcadoActivity">

  <ProgressBar
      android:id="@+id/idParaulogicPB"
      style="?android:attr/progressBarStyleLarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="164dp"
      android:layout_marginTop="484dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/idParaulogicImg"
      android:layout_width="359dp"
      android:layout_height="283dp"
      android:layout_marginStart="24dp"
      android:layout_marginTop="68dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/p1" />

  <EditText
      android:id="@+id/idPraulaParaulogic"
      android:layout_width="245dp"
      android:layout_height="49dp"
      android:layout_marginStart="36dp"
      android:layout_marginTop="352dp"
      android:ems="10"
      android:hint="@string/paraules"
      android:inputType="textPersonName"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/idParaulesParaulogic"
      android:layout_width="344dp"
      android:layout_height="299dp"
      android:layout_marginStart="36dp"
      android:layout_marginTop="400dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/idParaulogicButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="284dp"
      android:layout_marginTop="352dp"
      android:text="ENVIAR"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>